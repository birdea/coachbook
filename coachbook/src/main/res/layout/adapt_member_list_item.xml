<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:background="#aaaa"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_member_photo"
        android:layout_width="66.67dp"
        android:layout_height="66.67dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/soccer_ball_08" />

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.33dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="NAME"
        android:textColor="#2f3033"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_member_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.33dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="AGE"
        android:textColor="#2f3033"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_member_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.33dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="010-1234-5678"
        android:textColor="#2f3033"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>